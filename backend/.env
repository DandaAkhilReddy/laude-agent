# Enterprise Laude Agent - Backend Configuration
# HSS Medicine Environment Variables

# Database Configuration
MONGO_URL=mongodb://localhost:27017

# OpenAI API Configuration  
OPENAI_API_KEY=your_openai_api_key_here

# Security Configuration
SECRET_KEY=your_super_secret_key_here_generate_a_new_one

# Company Configuration
COMPANY_DOMAIN=hssmedicine.com
COMPANY_NAME=HSS Medicine

# Email Configuration (for production)
SMTP_SERVER=smtp.outlook.com
SMTP_PORT=587
SMTP_USERNAME=your_email@hssmedicine.com
SMTP_PASSWORD=your_email_password

# Session Configuration
OTP_EXPIRY_MINUTES=10
SESSION_EXPIRY_HOURS=8

# File Storage Configuration
MAX_FILE_SIZE_MB=50
ALLOWED_AUDIO_FORMATS=wav,mp3,m4a,ogg

# Azure Configuration (when ready)
# AZURE_STORAGE_CONNECTION_STRING=your_azure_storage_connection_string
# AZURE_STORAGE_CONTAINER=laude-agent-files

# Environment
ENVIRONMENT=development
DEBUG=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/laude_agent.log

# API Configuration
API_PREFIX=/api
API_VERSION=v1

# Rate Limiting (requests per minute)
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# CORS Configuration (update for production)
CORS_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000"]